---
import Header from '@/components/Header.astro';

import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Voidegon description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class='pb-20'>
    <Header />
    <slot />
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Caveat+Brush&family=Caveat:wght@400;500;600;700&family=Lexend:wght@100;200;300;400;500;600;700;800;900&family=Lobster&family=Lobster+Two:ital,wght@0,400;0,700;1,400;1,700&family=Pacifico&family=Unbounded:wght@200;300;400;500;600;700;800;900&display=swap');

      /** 3 Fonts (Capitulos, Lore, Estilo Medieval): Nunito, Grenze Gotisch y New Rocker */
      @import url('https://fonts.googleapis.com/css2?family=Grenze+Gotisch:wght@100..900&family=New+Rocker&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap');
      /** Title Artistic Font (Voidegon): Moirai One */
      @import url('https://fonts.googleapis.com/css2?family=Moirai+One&display=swap');

      :root {
        color-scheme: light dark;

        --dark: #212121;
        --light: #fff;
        --black: #111;
        --white: #ccc;
        --grey: #666;
        --gray: #333;
        --title: #25d366;
        --subtitle: #f89d1f;
        --section: #00a1b9;
        --warning: #ff5349;

        /* Span Tags */
        --name: #fff;
        --location: #a1a556;
        --group: #008080;
        --date: #dcbd4c;
        --event: #ad70a4;
        --deity: #ac0940;
        --object: #ff4fa7;

        /* Money Colors */
        --copper: #ce7c56;
        --silver: #848482;
        --electro: #96aed0;
        --gold: #f0c434;
        --platinum: #eff3ee;

        /* Rarity Colors */
        --common: #525252;
        --uncommon: #4caf50;
        --rare: #2196f3;
        --epic: #9c27b0;
        --legendary: #ffeb3b;
        --mythic: #f44336;
        --unique: #ffffff;

        /** Additional Colors */
        --red: #e31937;
      }

      html {
        font-family: 'lexend';
        background: var(--dark);
        color: var(--white);
      }
      body::-webkit-scrollbar {
        display: none; /* Ocultar scroll */
      }

      /** Span */
      strong#hero {
        color: var(--name);
        font-family: 'unbounded';
        text-transform: capitalize;
      }
      strong#heros,
      span#group {
        color: var(--group);
        text-transform: capitalize;
        font-size: 0.8rem;
      }
      span#name {
        color: var(--name);
        font-family: 'pacifico';
        text-transform: capitalize;
      }
      span#location {
        color: var(--location);
        font-family: 'lobster';
        text-transform: capitalize;
      }
      span#date {
        color: var(--date);
        font-family: 'pacifico';
      }
      span#event {
        color: var(--event);
      }
      span#deity {
        color: var(--deity);
        text-transform: capitalize;
        font-family: 'unbounded';
        font-weight: bold;
      }
      span#object {
        color: var(--object);
        font-family: 'caveat brush';
        font-size: 1.15rem;
      }
      span#monster {
        color: var(--copper);
        font-family: 'lobster';
      }
      span#pet {
        color: var(--electro);
        font-weight: 500;
        font-family: 'pacifico';
      }
      span#spell {
        color: var(--gold);
        font-family: 'pacifico';
        font-weight: 500;
      }
      span#phrase {
        color: var(--silver);
        font-style: italic;
        font-family: '';
      }
      span#hint {
        color: var(--grey);
        font-style: italic;
        font-family: '';
      }
      span#good {
        color: var(--title);
      }
      span#neutral {
        color: var(--subtitle);
      }
      span#bad {
        color: var(--warning);
      }
      span#gold {
        color: var(--gold);
      }
      strong.danger {
        color: var(--warning);
      }

      span#data,
      span#info {
        color: var(--warning);
        letter-spacing: 0px;
      }

      /** Nuevos Formatos (Esperemos que los Fijos) */
      strong#day {
        font-family: 'Grenze Gotisch', serif;
        color: var(--date);
        font-size: 1.2rem;
      }
    </style>
  </body>
</html>
